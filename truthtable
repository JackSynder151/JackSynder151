#include <stdio.h>
#include <stdlib.h>
  
int main()
{
    int a[5] = { 1, 0, 1, 0, 1 };
    int b[5] = { 0, 1, 1, 0, 0 };
    int i, product, or_ans, ans, ch;
    printf("Enter the choice: ");
    scanf("%d",&ch);
    if(ch==1)
    {
    printf("\nTruth table of AND Gate");
    for (i = 0; i < 5; i++) {
        product = a[i] * b[i];
        printf("\n %d AND %d = %d",a[i], b[i], product);
    }
    }
    printf("\nTruth tabel of OR gate");
    if(ch==2)
    {
    for (i = 0; i < 5; i++) 
    {
        if (a[i] == 0 && b[i] == 0)
            or_ans = 0;
        else
            or_ans = 1;
        printf("\n %d OR %d = %d",a[i], b[i], or_ans);
    }
    }
    if(ch==3)
    printf("\nTruth table of NOT gate ");
    for (i = 0; i < 5; i++) {
        if (a[i] == 0)
            ans = 1;
        else
            ans = 0;
        printf("\n  NOT %d = %d", a[i], ans);
    }
}
